<view class="father  {{optionEffect}}">
  <view class="selector " wx:for="{{options}}" wx:key>
    <view bindtap='tapChar' data-char="{{item}}" class="option">
      <text style="color:{{color}};" class="zimu" >{{item}}</text>
    </view>
  </view>

  <image src='play.jpg' class="play {{playEffect}}" bindtap='playQuestion'></image>
  <audio id='myAudio' src="{{ mp3Source }}"></audio>
</view>