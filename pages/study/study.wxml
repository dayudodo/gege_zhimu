<view>
  <view class="" scroll-y wx:for="{{colorGroup}}" wx:for-index="idx" wx:key="*this" style="height: 240rpx;">

    <charItem background="{{item}}" char="{{currentCharGroup[idx]}}"> </charItem>


  </view>
  <view class="btn_group">
    <button bindtap='tapPrev' class="btn">←</button>
    <button bindtap='tapNext' class="btn">→</button>
  </view>
</view>

